# Utility scripts

# Loading nvm
source $(brew --prefix nvm)/nvm.sh
nvm use default > /dev/null

function ydl() {
  youtube-dl --console-title -o "%(autonumber)s-%(title)s.%(ext)s" $(pbpaste); growl youtubedl
}

# weather
alias meteo="curl -4 http://wttr.in/Lyon"

# notify me
function f_notifyme {
  LAST_EXIT_CODE=$?
  CMD=$(fc -ln -1)
  # No point in waiting for the command to complete
  ~/notifyme.sh "$CMD" "$LAST_EXIT_CODE" &
}

export PS1='$(f_notifyme)'$PS1

eval "$(rbenv init -)"
